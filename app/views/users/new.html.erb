<div class="errors">
<% if @user.errors.any? %>
  <h3>The user wasn't created because:</h3>
  <% @user.errors.full_messages.each do |msg| %>
    <h4><%= msg %></h4>
  <% end %>
<% end %>
</div>

<div class="sign-up">
<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <%= f.label :username, "Username", class: 'form-label' %><br>
  <%= f.text_field :username, class: 'form-text-box' %><br><br>
  <%= f.label :email, "Email", class: 'form-label' %><br>
  <%= f.text_field :email, class: 'form-text-box' %><br><br>
  <%= f.label :password, "Password", class: 'form-label' %><br>
  <%= f.password_field :password, class: 'form-text-box' %><br><br>
  <%= f.submit "Create User", class: 'form-submit-box' %>
<% end %>
    <p>or</p>
    <div class="google">
      <%= link_to do %>
      <%= image_tag("google-icon.png") %>
      Sign in with Google
      <% end %>
    </div>
    <br>
  <br><%= link_to "Already have an account?", '/login' %>
</div>
