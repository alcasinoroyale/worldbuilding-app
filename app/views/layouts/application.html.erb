<!DOCTYPE html>
<html>
  <head>
    <title>Worldbuilding App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Source+Sans+Pro|Roboto:700', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <% if flash[:message] %>
        <h3><%= flash[:message] %></h3>
      <% end %>
    </div>

    <header>
    <nav class="navigation" id="navMenu">
      <a href="javascript:void(0);" class="icon" onclick="responsiveMenu()">
        <i class="fa fa-bars" style="font-size:24px"></i>
      </a>
      <%= link_to "Worldbuilding", root_path %>
      <%= link_to "Create World", worlds_path %>
      <% if !logged_in? %>
        <%= link_to "Sign Up", new_user_path %>
        <%= link_to "Login", '/login' %>
      <% elsif logged_in? %>
      <%= link_to "Writers", users_path %>
      <%= link_to "Brainstorm" %>
      <%= link_to "Profile", user_path(current_user) %>
      <%= link_to "Logout", '/logout' %>
      <% end %>
    </nav>
  </header>

    <script>
        function responsiveMenu() {
          let x = document.getElementById("navMenu");
          if (x.className === "navigation") {
            x.className += " responsive";
          } else {
            x.className = "navigation";
          }
        }
    </script>
    <%= yield %>
  </body>
</html>
